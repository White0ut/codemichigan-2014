<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.codebits.codemichigan.michiganoutdoors.activities.LandAttractionActivity"
    android:background="@color/cream">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Burton's Landing State Forest Campground"
        android:id="@+id/site_name_heading"
        android:fontFamily="sans-serif"
        android:textColor="@color/blue"
        android:textStyle="bold"
        android:textSize="@dimen/activity_heading_text"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="County | Style"
        android:id="@+id/site_county_text"
        android:fontFamily="sans-serif"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/green"
        android:layout_below="@+id/site_name_heading"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_phone_number"
        android:id="@+id/site_call_button"
        android:drawablePadding="5dp"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:textColor="@color/dynamic_red"
        android:drawableLeft="@drawable/ic_phone"
        android:textAlignment="viewStart"
        android:gravity="left|fill_vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_below="@+id/site_county_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/button_shape"
        android:layout_marginRight="5dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/locate"
        android:id="@+id/site_locate_button"
        android:drawableLeft="@drawable/ic_find_me"
        android:drawablePadding="5dp"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:textColor="@color/blue"
        android:layout_toEndOf="@+id/site_call_button"
        android:textAlignment="gravity"
        android:gravity="left|fill_vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_alignTop="@+id/site_call_button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/button_shape"
        android:layout_marginLeft="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Permit Required: Yes"
        android:id="@+id/site_permit_text"
        android:fontFamily="sans-serif"
        android:textColor="@color/blue"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_below="@+id/site_call_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/campground_detail_text_layout"
        android:minHeight="330dp"
        android:layout_below="@+id/site_permit_text"
        android:layout_marginTop="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="montes glaciales in oceano Germanico ipsum dolor sit amet RIBEYE PORK? IS IT GOOD THO?"
            android:id="@+id/campground_detailed_text"
            android:fontFamily="sans-serif"
            android:textColor="@color/green"
            android:layout_below="@+id/site_permit_text"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:lineSpacingExtra="5sp" />
    </ScrollView>


</RelativeLayout>
