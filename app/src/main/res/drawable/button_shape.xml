<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false" android:state_pressed="false">
        <shape>
            <stroke
                android:width="1dp"
                android:color="@color/cream_medium"/>
            <corners
                android:radius="4dp" />

            <padding
                android:left="1dp"
                android:right="1dp"
                android:top="1dp"
                android:bottom="1dp"/>

            <solid android:color="@color/cream"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <stroke
                android:width="1dp"
                android:color="@color/cream_dark"/>
            <corners
                android:radius="4dp" />

            <padding
                android:left="1dp"
                android:right="1dp"
                android:top="1dp"
                android:bottom="1dp"/>

            <solid android:color="@color/cream_medium"/>
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape>
            <stroke
                android:width="1dp"
                android:color="@color/cream_dark"/>
            <corners
                android:radius="4dp" />

            <padding
                android:left="1dp"
                android:right="1dp"
                android:top="1dp"
                android:bottom="1dp"/>

            <solid android:color="@color/cream_subtle"/>
        </shape>
    </item>
</selector>
